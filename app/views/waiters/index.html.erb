<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-8">
    <%= render 'shared/messages' %>

    <table class="table table-bordered">
      <tr>
        <th colspan="7" id="table-heading">
          <div class="row">
            <div class="col-lg-7"><h2 class="text-right">Waiters</h2></div>
            <% if current_user.admin? %>
              <div class="col-lg-5">
                <div class="text-right" id="add-btn"><%= link_to '+ New Waiter', new_user_registration_path, class: 'btn btn-primary' %></div>
              </div>
            <% end %>
          </div>
        </th>
      </tr>

      <tr>
        <th>Name</th>
        <th>Email Address</th>
        <th>Number of Orders Placed</th>
        <th colspan="2" class="text-center">Actions</th>
      </tr>

      <% @waiters.each do |waiter| %>
        <tr>
          <td><%= waiter.name %></td>
          <td><%= waiter.email %></td>
          <td><%= waiter.orders.count %></td>
          <td><%= link_to 'Edit', edit_waiter_path(waiter) %></td>
          <td><%= link_to 'Delete', waiter_path(waiter),
                  method: :delete,
                  data: { confirm: 'Are you sure you want to delete this order?' }  %></td>
        </tr>
      <% end %>
    </table>

    <div class="text-center">
      <div class="pagination">
      <%= will_paginate @items, container: false %>
    </div>
  </div>

  </div>
  <div class="col-lg-2">
  </div>
</div>