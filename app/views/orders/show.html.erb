        <td><%= @order.delivery_time.to_s(:long) %></td>
      </tr>
    </table>

    <div class="text-center"><%= link_to 'Back to Order Listing', orders_path, class: 'btn btn-default' %></div>
  </div>
  <div class="col-lg-2">
  </div>
</div>



