<div class="row">
  <div class="col-lg-2">
  </div>
  <div class="col-lg-8">
   <%= render 'shared/messages' %>

    <br>
    <table class="table table-bordered">
      <tr>
        <td><strong>Order Description: </strong></td>
        <td><%= @order.description %></td>
      </tr>
      <tr>
        <td><strong>Order Status: </strong></td>
        <td><%= @order.status %></td>
      </tr>
