<div class="row">
  <div class="col-lg-3">
  </div>
  <div class="col-lg-6">
    <br>
    <%= render 'shared/messages' %>
    <br>
    <table class="table table-bordered">
      <tr>
        <td rowspan="3"><div class="text-center"><%= image_tag @item.image.url(:medium) %></div></td>
        <td colspan="2"><div class="text-center"><h2><%= @item.name %></h2></div></td>
      </tr>
      <tr>
        <td><strong>Quantity in Stock: </strong></td>
        <td><%= @item.quantity %></td>
      </tr>

      <tr>
        <td><strong>Price:</strong></td>
        <td><%= number_to_currency(@item.price, unit: "Rs ") %></td>
      </tr>

    </table>
    <br>

    <div class="text-center"><%= link_to "Back to Menu", items_path, class: 'btn btn-default' %></div>

  </div>
  <div class="col-lg-3">
  </div>
</div>



