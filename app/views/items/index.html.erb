<%= render 'shared/messages' %>

<table class="table table-bordered">
  <tr>
     <th colspan="6" id="table-heading">
      <div class="row">
        <div class="col-lg-7"><h2 class="text-right">Menu</h2></div>
        <% if can? :create, Item %>
          <div class="col-lg-5">
            <div class="text-right" id="add-btn"><%= link_to '+ New Item', new_item_path, class: 'btn btn-primary' %></div>
          </div>
        <% end %>

      </div>
    </th>
  </tr>

  <% if @items.empty? %>
    <tr>
      <td>No Items to Display</td>
    </tr>
  <% end %>

  <% @items.each do |item| %>

    <tr>
      <td rowspan="3" id="image-col"><div class="text-center"><%=  image_tag item.item_image.url(:thumb) %></div></td>
      <td><strong>Item Name: </strong></td><td><%= link_to item.name, item_path(item) %></td>
      <% if can? :update, item %>
        <td rowspan="3" class="text-center"><%= link_to 'Edit', edit_item_path(item) %></td>
      <% end %>
      <% if can? :destroy, item %>
        <td rowspan="3" class="text-center"><%= link_to 'Delete', item_path(item),
                                                method: :delete,
                                                data: {confirm: 'Are you sure you want to delete this item?' } %></td>
      <% end %>
    </tr>
    <tr>
      <td><strong>Quantity in Stock: </strong></td>
      <td><%= item.quantity %></td>
    </tr>

    <tr>
      <td><strong>Price:</strong></td>
      <td><%= number_to_currency(item.price, unit: "Rs ") %></td>
    </tr>

  <% end %>
</table>

<div class="text-center">
  <div class="pagination">
    <%= will_paginate @items, container: false %>
  </div>
</div>
<br>
