<h2 class="text-center">Menu</h2>

<table class="table table-striped">
  <tr>
    <th>Item Name</th>
    <th>Quantity</th>
    <th>Price</th>
    <th colspan="3"></th>
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
      <td><%= link_to 'Show', item_path(item) %></td>
      <% if can? :manage, Item %>
      <td><%= link_to 'Edit', edit_item_path(item) %></td>
      <td><%= link_to 'Delete', item_path(item),
               method: :delete,
               data: {confirm: 'Are you sure you want to delete this item?' } %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<% if can? :manage, Item %>
<div class="text-center"><%= link_to 'New item', new_item_path, class: 'btn btn-default' %></div>
<% end %>
